$rex = 2rem / 5

html {
    background-color: #fff;
    color: #000;
    font-size: 12px
}

html, body, #app {
    height: 100%;
    min-height: 100%
}

#app {
    text-align: left
}

input {
    border: none
}

* {
    margin: 0px;
    padding: 0px;
    -webkit-overflow-scrolling: touch;
    outline: none;
}

body {
    margin: 0 auto;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    line-height: 1.4;
    font-family: PingFang-SC-Regular !important;
    overflow-x: hidden;
    -webkit-text-size-adjust: 100% !important;
}

.htmlOverHide {
    overflow: hidden;
    -webkit-overflow-scrolling: touch
}

li {
    list-style: none;
}

[v-cloak] {
    display: none;
}

/** iconFont **/
.iconFont {
    font-family: "iconfont" !important;
    font-style: normal;
    vertical-align: middle
}

/** publice **/
img {
    border: none;
    width: 100%;
    height: auto;
    display: block;
    vertical-align: top;
}

.imgClick {
    pointer-events: none;
}

.wrap {
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
}

/** 适配android/ios line-height属性值不一致的问题 **/
.line_height {
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: normal;
}

.clear {
    clear: both;
}

.clearfix {
    zoom: 1;
}

.clearfix:after {
    content: '';
    clear: both;
    display: block;
    height: 0;
    visibility: hidden;
}

a {
    color: #666;
    outline: none;
}

a, a:visited {
    text-decoration: none;
}

i {
    font-style: normal;
}

